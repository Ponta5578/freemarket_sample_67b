.background1

  .headder
    = render 'devise/shared/headder'

  .login-field
    .login-field__new-registration
      .login-field__new-registration__guide
        アカウントをお持ちでない方はこちら
      = link_to new_user_registration_path, class: "login-field__new-registration__btn" do
        新規会員登録
      

    %h2 ログイン画面
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'login-field__field__mail'
      .field
        = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: 'login-field__field__passwaord'

      .login-field__actions
        = f.submit "ログイン", class: 'login-field__actions__btn'

    = link_to "パスワードを忘れの方", new_password_path(resource_name), class: 'login-field__reset-password'

  .footer
    = render 'devise/shared/footer'
