%h2 会員情報入力
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    = f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "メールアドレス"
    
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "パスワード"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "パスワード（もう一度確認のために入れてください）"

  .field
    本人確認

  .field
    .field__name
      .fielf__name__title
        お名前（全角）
      .fielf__name__notice
        必須


  .actions
    = f.submit "登録する"
= render "devise/shared/links"
