.cado
  .cado__titre
    クレジットカード情報入力
  = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
    .cado__information__number
      %label
        カード番号
      %br
    .cado__information__number__1.number-top
        
      = text_field_tag "number", "", class: "input-default number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      %br
      %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?73731125", :width => "49"}/
      %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?73731125", :width => "34"}/
      %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?73731125", :width => "30"}/
      %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?73731125", :width => "32"}/
      %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?73731125", :width => "21"}/
      %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?73731125", :width => "32"}/
      %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?73731125", :width => "32"}/
    .cado__information__deadline
      .cado__information__deadline__top   
        %br
        %label 有効期限
        %br
    %select#exp_month{name: "exp_month", type: "text"}
      %option{value: ""} --
      %option{value: "1"}01
      %option{value: "2"}02
      %option{value: "3"}03
      %option{value: "4"}04
      %option{value: "5"}05
      %option{value: "6"}06
      %option{value: "7"}07
      %option{value: "8"}08
      %option{value: "9"}09
      %option{value: "10"}10
      %option{value: "11"}11
      %option{value: "12"}12
    %span 月/
    %select#exp_year{name: "exp_year", type: "text"}
      %option{value: ""} --
      %option{value: "2019"}19
      %option{value: "2020"}20
      %option{value: "2021"}21
      %option{value: "2022"}22
      %option{value: "2023"}23
      %option{value: "2024"}24
      %option{value: "2025"}25
      %option{value: "2026"}26
      %option{value: "2027"}27
      %option{value: "2028"}28
      %option{value: "2029"}29
    %span 年
    .cado__information__code__top
      %br
      %label セキュリティコード
      %br
      = text_field_tag "cvc", "", class: "input-default cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      #card_token.cado__information__addition
      %br
      = submit_tag "追加する", id: "token_submit" , class: "btn"