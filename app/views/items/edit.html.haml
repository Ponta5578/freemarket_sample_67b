= render 'header'
.item
  .main
    .main__sell
      = form_for @item do |f|
        .main__sell__top
          %h1 商品の情報を入力
        .main__sell__img
          %h3 出品画像
          %span 必須
          #image-box
            #previews
              - if @item.persisted?
                - @item.images.each_with_index do |image, i|
                  = image_tag image.image_name.url, data: { index: i }, width: "100", height: '100'
            = f.fields_for :images do |image|
              .js-file_group{"data-index" => "#{image.index}"}
                = image.file_field :image_name, class: 'js-file'
                %br/
                %span.js-remove 削除
              - if @item.persisted?
                = image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy'
            - if @item.persisted?
              .js-file_group{"data-index" => "#{@item.images.count}"}
                = file_field_tag :image_name, name: "item[images_attributes][#{@item.images.count}][item_name]", class: 'js-file'
                .js-remove 削除
        .main__sell__name
          商品名
          %span 必須
          = f.text_field :name, class: 'item-name', placeholder: '  商品名 (必須40文字まで)'
          %br
          商品の説明
          %span 必須
          = f.text_area :status, class: 'item-exposition', placeholder: '商品名 （商品の説明(必須1,000文字以内）（色、素材、重さ、定価、注意点など）例）   2010年頃に1万円に購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。）'
        .main__sell__category
          .main__sell__category__left
            %h3  商品の詳細
          .main__sell__category__right
            .main__sell__category__right__content
              .main__sell__category__right__content__item
                %b カテゴリー
              .main__sell__category__right__content__form
                %span 必須
                = f.collection_select :category_id, Category.all, :id, :name, prompt: "---"
            .main__sell__category__right__content
              .main__sell__category__right__content__item
                %b ブランド名
              .main__sell__category__right__content__form
                %span.gray 任意
                = f.text_field :brand, class: 'item-name', placeholder: '  例）NoGuChi'
            .main__sell__category__right__content
              .main__sell__category__right__content__item
                %b  商品の状態
              .main__sell__category__right__content__form
                %span 必須
                = f.select :condition, [ ["新品、未使用", "新品、未使用"], ["未使用に近い", "未使用に近い"], ["目立った傷や汚れなし", "目立った傷や汚れなし"], ["やや傷や汚れなし", "やや傷や汚れなし"], ["傷や汚れなし", "傷や汚れなし"], ["傷や汚れあり", "傷や汚れあり"], ["全体的に状態が悪い", "全体的に状態が悪い"] ], prompt: "---"
        .main__sell__delivery
          .main__sell__delivery__left
            %h3 配送について
          .main__sell__delivery__rigft
            .main__sell__delivery__rigft__content
              .main__sell__delivery__rigft__content__item
                %b 配送料の負担
              .main__sell__delivery__rigft__content__form
                %span 必須
                = f.select :cost, [ ["送料込み(出品者負担)","送料込み(出品者負担)"], ["着払い(購入者負担)", "着払い(購入者負担)"] ], prompt: "---"
              .main__sell__delivery__rigft__content__item
                %b 配送の方法
              .main__sell__delivery__rigft__content__form
                %span 必須
                = f.select :delivery, [ ["ゆうパック","ゆうパック"], ["クリックぽすと", "クリックぽすと"], ["クロネコヤマト", "クロネコヤマト"]], prompt: "---"
              .main__sell__delivery__rigft__content__item
                %b 発送元の地域
              .main__sell__delivery__rigft__content__form
                %span 必須
                = f.select :send_address, [["北海道", "北海道"], ["青森県", "青森県"], ["岩手県", "岩手県"], ["宮城県", "宮城県"], ["秋田県", "秋田県"], ["山形県", "山形県"], ["福島県", "福島県"], ["茨城県", "茨城県"], ["栃木県", "栃木県"], ["群馬県", "群馬県"], ["埼玉県", "埼玉県"], ["千葉県", "千葉県"], ["東京都", "東京都"], ["神奈川県", "神奈川県"], ["新潟県", "新潟県"], ["富山県", "富山県"], ["石川県", "石川県"], ["福井県", "福井県"], ["山梨県", "山梨県"], ["長野県", "長野県"], ["岐阜県", "岐阜県"], ["静岡県", "静岡県"], ["愛知県", "愛知県"], ["三重県", "三重県"], ["滋賀県", "滋賀県"], ["京都府", "京都府"], ["大阪府", "大阪府"], ["兵庫県", "兵庫県"], ["奈良県", "奈良県"], ["和歌山県", "和歌山県"], ["鳥取県", "鳥取県"], ["島根県", "島根県"], ["岡山県", "岡山県"], ["広島県", "広島県"], ["山口県", "山口県"], ["徳島県", "徳島県"], ["香川県", "香川県"], ["愛媛県", "愛媛県"], ["高知県", "高知県"], ["福岡県", "福岡県"], ["佐賀県", "佐賀県"], ["長崎県", "長崎県"], ["熊本県", "熊本県"], ["大分県", "大分県"], ["宮崎県", "宮崎県"], ["鹿児島県", "鹿児島県"], ["沖縄県", "沖縄県"], ["未定", "未定"]], prompt: "---"
              .main__sell__delivery__rigft__content__item
                %b 発送まで日数
              .main__sell__delivery__rigft__content__form
                %span 必須
                = f.select :send_date, [ ["１〜２日で発送","１〜２日で発送"], ["２〜３日で発送", "２〜３日で発送"], ["４〜７日で発送", "４〜７日で発送"] ], prompt: "---"
        .main__sell__price
          販売価格(300~9,999,999)
          .main__sell__price__left
            価格
            %span 必須
          .main__sell__price__right
            ¥
            = f.number_field :price, class: 'item-price', placeholder: '  例）300'
        .main__sell__input
          .main__sell__input__top
            %P
            = link_to "禁止されている出品",'#'
            、
            = link_to "行為",'#'
            を必ずご確認ください。
            %br
            またブランド品でシリアルナンバー等がある場合はご記載ください。
            = link_to "偽ブランドの販売",'#'
            は犯罪であり処罰される可能性があります。
            %br
            また、出品をもちまして
            = link_to "加盟店規約",'#'
            に同意したことになります。
          .main__sell__input__middle
            = f.submit '編集する', class: 'sell-item'
          .main__sell__input__bottom
            = link_to 'もどる', '#'



= render 'footer'