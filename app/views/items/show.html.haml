.wrapper
  = render 'shared/header'
.details
  .details__top
    .details__top__title
      = @item.name

    .details__top__middle
      .details__top__middle__top
        = image_submit_tag @images.first.image_name, class: "image111" , height: "300px" , width: "500px"    
        .details__top__middle__top__a
          = image_submit_tag @images.first.image_name, class: "image111" , height: "100px" , width: "100px"    
          .details__top__middle__top__a__b
            = image_submit_tag @images.first.image_name, class: "image111" , height: "100px" , width: "100px"    
                               
      .details__top__span
        ¥
        = @item.price
      
    .details__top__itembox
      .details__top__itembox__left
        (税込)
      .details__top__itembox__right
        送料込み

    .details__top__itembox2
      = @item.status
    .details__top__list
    %table{border:  "1"}
      %tr
        %th 出品者
        %td 
          = @item.name
          -# = User.find(@item.seller_id).nickname
      %tr
        %th カテゴリー
        %td
          -# = Category.find(@item.category_id).name
          %br/
          = link_to 'トップス'
          %br/
          = link_to 'Tシャツ/カットソー(半袖/袖なし)'
      %tr
        %th ブランド
        %td 
      %tr
        %th 商品のサイズ
        %td 
      %tr
        %th 商品の状態
        %td 
          = @item.condition
      %tr
        %th 配送料の負担
        %td 
          = @item.cost
      %tr
        %th 発送元の地域
        %td 
          = @item.send_address
      %tr
        %th 発送日の目安
        %td 
          = @item.send_date


    .details__top__test
      .details__top__test__text1
        = link_to root_path do
          ★ お気に入り ()
